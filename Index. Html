    <div class="m-head"><span onclick="closeM()" style="cursor:pointer; font-size:30px;">←</span> Details</div>
    <div class="m-body">
        <img id="mImg" style="width: 100%; height: 250px; object-fit: cover; border-radius: 10px;">
        <h2 id="mTitle" style="margin: 10px 0;"></h2>
        <div id="mPrice" class="price" style="font-size: 24px;"></div>
        
        <div class="order-form">
            <h3 style="margin-bottom:10px;">Delivery Address</h3>
            <input type="text" id="uName" placeholder="Aapka Naam">
            <input type="number" id="uPhone" placeholder="WhatsApp No">
            <textarea id="uAddr" rows="3" placeholder="Pura Pata (Area, Pin Code)"></textarea>
        </div>
    </div>
    <button class="submit-btn" onclick="send()">SUBMIT ORDER (WhatsApp)</button>
</div>

<script>
    let products = [];
    const images = [
        "https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?w=400", // Cosmetic
        "https://images.unsplash.com/photo-1583391733956-3750e0ff4e8b?w=400", // Suit
        "https://images.unsplash.com/photo-1594932224828-b4b059b6f684?w=400", // Gents
        "https://images.unsplash.com/photo-1584285418504-0051b6d49f39?w=400"  // Sui Dhaga
    ];

    function build() {
        for (let i = 1; i <= 500; i++) {
            products.push({
                id: i,
                name: "Premium Item #" + i,
                price: 99 + (i % 500),
                img: images[i % images.length]
            });
        }
    }

    function render() {
        document.getElementById('grid').innerHTML = products.map(p => `
            <div class="card" onclick="openM(${p.id})">
                <div class="img-box"><img src="${p.img}"></div>
                <h3>${p.name}</h3>
                <div class="price">₹${p.price}</div>
            </div>
        `).join('');
    }

    let active = null;
    function openM(id) {
        active = products.find(p => p.id === id);
        document.getElementById('mImg').src = active.img;
        document.getElementById('mTitle').innerText = active.name;
        document.getElementById('mPrice').innerText = "₹" + active.price;
        document.getElementById('modal').style.display = "block";
    }

    function closeM() { document.getElementById('modal').style.display = "none"; }

    function send() {
        let n = document.getElementById('uName').value;
        let p = document.getElementById('uPhone').value;
        let a = document.getElementById('uAddr').value;
        if(!n || !p || !a) return alert("Bhai, Details bharna zaroori hai!");
        window.location.href = `https://wa.me/917728979968?text=*ORDER FROM YRYGO*%0A*By Aftab Ghori Mall*%0A%0A*Item:* ${active.name}%0A*Price:* ₹${active.price}%0A*Name:* ${n}%0A*Address:* ${a}`;
    }
    build(); render();
</script>
